extends layout
block content
  h1 Details of gadget
  - let items = results
  - let destination = `dispatch(\"/gadget/create")`
    button.btn( class="btn-primary ml-1", onclick= destination) create
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination1 = `dispatch(\"/gadget/update?id=${item._id}\")`
        - let destination2 = `dispatch(\"/gadget/detail?id=${item._id}\")`
        - let destination3 = `dispatch(\"/gadget/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.name}(#{item.quantity}) is #{item.price}
        button.btn( class="btn-primary ml-1", onclick= destination1) Update
        button.btn( class="btn-primary ml-1", onclick= destination2) Detail
        button.btn( class="btn-primary ml-1", onclick= destination3) Delete



 
  script.
    function dispatch(path){
      window.location.href=path
    }